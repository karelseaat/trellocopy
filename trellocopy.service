[Unit]
Description=copy snippets to and from trello
After=network.target

[Service]
Type=simple
ExecStart=/home/aat/trellocopy/shortcuts.py
WorkingDirectory=/home/aat/trellocopy
User=aat
Group=aat
Restart=on-failure
SyslogIdentifier=trellocopy
RestartSec=5
TimeoutStartSec=infinity

[Install]
WantedBy=multi-user.target
